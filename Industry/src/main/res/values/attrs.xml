<?xml version="1.0" encoding="utf-8"?>

<!--
./src/main/res/values/attrs.xml
-->

<!--
TODO: Are the Radius attributes helpful? Could the android versions of these work just as well?
-->

<resources>

    <declare-styleable name="StackLight">
        <attr name="radius" format="dimension" />
        <attr name="topLeftRadius" format="dimension" />
        <attr name="topRightRadius" format="dimension" />
        <attr name="bottomLeftRadius" format="dimension" />
        <attr name="bottomRightRadius" format="dimension" />
        <attr name="light_off" format="boolean" />
        <attr name="light_on" format="boolean" />
        <attr name="blink_duration" format="integer" />
        <attr name="segment_color" format="color" />
        <attr name="orientation" format="enum">
            <enum name="horizontal" value="0" />
            <enum name="vertical" value="1" />
        </attr>
    </declare-styleable>

</resources>
